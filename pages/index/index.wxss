/**index.wxss**/

/* 轮播图相关样式 */
.banners {
  width: 100%;
  height: 200px;
}

.banner{
  position: relative;
}

.banner-image{
  width: 100%;
  height: 100%;
}

/* 列表内容相关样式 */
.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  padding: 8px 0;
}

.sub-title{
  color: #76787e;
  height: 36px;
  line-height: 36px;
  padding: 0 16px;
  font-size: 17px;
}

/* 新闻cell相关样式 */
.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8px;
  margin: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

